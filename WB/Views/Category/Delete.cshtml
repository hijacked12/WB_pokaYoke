@model Category
@{
    ViewData["Title"] = "删除料号";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="text-dark"> <b style="font-size:25px;"> 删除料号 </b> </div>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="MaterialNumber"> <b> 成品料号 </b> </label>
            <input asp-for="MaterialNumber" class="form-control" />
            <span asp-validation-for="MaterialNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ComponentNumber"> <b> 零件号 </b> </label>
            <input asp-for="ComponentNumber" class="form-control" />
            <span asp-validation-for="ComponentNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ComponentDescription"> <b> 零件描述 </b> </label>
            <input asp-for="ComponentDescription" class="form-control" />
            <span asp-validation-for="ComponentDescription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"> <b> 数量 </b> </label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ChangeNumber"> <b> 变化号 </b> </label>
            <input asp-for="ChangeNumber" class="form-control" />
            <span asp-validation-for="ChangeNumber" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary">删除</button>
        <a asp-controller="Category" asp-action="List_Table" class="btn btn-secondary">
            返回
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}